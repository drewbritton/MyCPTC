<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="120dp"
                android:id="@+id/imageView1"
                android:maxHeight="120dp"
                android:minHeight="40dp"
                android:scaleType="fitCenter"
                android:scaleX="1"
                android:scaleY="1" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_canvas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/iconcanvas1x"
                android:gravity="center"
                android:onClick="onClickFragment"
                android:text="Canvas"
                android:textColor="#502d7f"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/map1x"
                android:gravity="center"
                android:onClick="onClickFragment"
                android:text="Campus Map"
                android:textColor="#502d7f"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="2" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/email1x"
                android:gravity="center"
                android:onClick="onClickFragment"
                android:text="Student Email"
                android:textColor="#502d7f"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/info1x"
                android:gravity="center"
                android:onClick="onClickFragment"
                android:text="General Info"
                android:textColor="#502d7f"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="2" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/events"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/events1x"
                android:gravity="center"
                android:onClick="onClickFragment"
                android:text="Events"
                android:textColor="#502d7f"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/settings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/settings1x"
                android:gravity="center"
                android:onClick="onClickFragment"
                android:text="Settings"
                android:textColor="#502d7f"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="2" />
        </TableRow>
    </TableLayout>
</LinearLayout>